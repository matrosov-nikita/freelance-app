.request
    include request_header
    .authors
        a.author(ng-repeat="req in request.requests",href='/user/{{req.executer._id}}') {{req.executer.name}}
            i(data-toggle="tooltip" data-placement="right" title="" data-original-title="Tooltip on right",
            ng-click="AcceptRequest(req._id, request.task._id)").fa.fa-plus-square
            i(data-toggle="tooltip" data-placement="right" title="" data-original-title="Tooltip on right",
            ng-click="RefuseRequest(req._id, request.task._id)").fa.fa-minus-square

